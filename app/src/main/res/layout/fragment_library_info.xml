<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/library_info_image_view"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="fitXY"
        tools:src="@raw/sailboat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="2">

            <TextView
                android:id="@+id/library_info_call_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/call"
                android:textSize="22sp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/phone"
                android:drawableStart="@drawable/phone"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:background="@color/color_separator"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="2">

            <TextView
                android:id="@+id/library_info_directions_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:text="@string/directions"
                android:textSize="22sp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/sign"
                android:drawableStart="@drawable/sign"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_separator"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/library_info_hours_of_operation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/hours_of_operation"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/is_open_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Open now"
            android:textSize="18sp"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sunday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/monday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/tuesday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/wednesday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/thursday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/friday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>

    <TextView
        android:id="@+id/saturday_hours_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        tools:text="Sunday: Closed"/>


</LinearLayout>